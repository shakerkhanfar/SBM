{
  "name": "sbm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter @sbm/web --filter @sbm/server dev",
    "dev:web": "pnpm --filter @sbm/web dev",
    "dev:server": "pnpm --filter @sbm/server dev",
    "build": "cd apps/server && pnpm build && cd ../web && pnpm build",
    "build:web": "cd apps/web && pnpm build",
    "build:server": "cd apps/server && pnpm build",
    "check-types": "pnpm -r check-types"
  }
}
