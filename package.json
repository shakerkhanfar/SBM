{
  "name": "sbm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter @sbm/web --filter @sbm/server dev",
    "dev:web": "pnpm --filter @sbm/web dev",
    "dev:server": "pnpm --filter @sbm/server dev",
    "build": "pnpm --filter @sbm/server run build && pnpm --filter @sbm/web run build",
    "build:web": "pnpm --filter @sbm/web run build",
    "build:server": "pnpm --filter @sbm/server run build",
    "check-types": "pnpm -r check-types"
  }
}
